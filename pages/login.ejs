<!DOCTYPE html>
<html lang="en">

    <head>
        <title>Deckify - Sign in</title>
        <meta charset="utf-8">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    </head>

    <body>

        <nav class="navbar navbar-expand-lg navbar-light bg-primary">
            <div class="container-fluid">
                <a class="navbar-brand text-white" href="#"><b>Deckify</b></a>
            </div>
        </nav>

        <div id="errors">
            <% if(errMsg) { %>
                <div class="alert alert-danger" role="alert">
                    <b>Error: </b><%= errMsg %>
                </div>
            <% } %>
            <% if(successMsg) { %>
                <div class="alert alert-success" role="alert">
                    <b>Success: </b><%= successMsg %>
                </div>
            <% } %>
        </div> <!-- stores all errors in here -->

        <div class="mx-3 my-3 row">
            <div class="col">
                <h2>Sign up</h2>
                <form onsubmit="return validateSignUp()" action="/signup" method="post">
                    <div class="form-group">
                    <label for="emailInput">Email Address</label>
                    <input type="text" name="email" class="form-control" id="emailInput" placeholder="Enter Email">
                    </div>

                    <div class="form-group">
                    <label for="userInput">Username</label>
                    <input type="text" name="username" class="form-control" id="userInput" placeholder="Enter Username">
                    </div>

                    <div class="form-group">
                        <label for="passInput">Password</label>
                        <input type="password" name="password" class="form-control" id="passInput" placeholder="Password">
                        <small id="passSecurity" class="form-text">Must fufill the following requirements:
                            <ul>
                                <li>At least 8 characters long</li>
                                <li>At least 1 lower case character <b>a-z</b></li>
                                <li>At least 1 upper case character <b>A-Z</b></li>
                                <li>At least 1 special character <b>eg !#_- etc</b></li>
                            </ul>
                        </small>
                    </div>

                    <button type="submit" class="btn btn-primary my-2">Sign Up</button>
                </form>
            </div>
            <div class="col">
                <h2>Sign in</h2>
                <form action="/signin" method="post">
                    <div class="form-group">
                    <label for="emailInput">Username</label>
                    <input type="text" name="username" class="form-control" id="emailInput" placeholder="Enter Username">
                    </div>

                    <div class="form-group">
                    <label for="passInput">Password</label>
                    <input type="password" name="password" class="form-control" id="passInput" placeholder="Enter Password">
                    </div>

                    <button type="submit" class="btn btn-primary my-2">Sign In</button>
                </form>
            </div>
        </div>
        <script src="./js/accounts.js"></script>
    </body>
</html>
